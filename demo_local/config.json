{
    "dev": true,
    "log_level": "debug",
    "server": {
        "host": "localhost",
        "port": 8081
    },
    "remote": {
        "url": "http://localhost:8080",
        "secret": "${API_SECRET}"
    },
    "content": {
        "not_found": {
            "en": "/not-found",
            "de": "/de/nicht-gefunden"
        }
    },
    "sass": {
        "dir": "assets",
        "entrypoint": "style.scss",
        "out": "static/bundle.css",
        "out_source_map": "static/bundle.css.map",
        "watch": true,
        "compiler": "sass"
    },
    "js": {
        "dir": "assets",
        "entrypoint": "entrypoint.js",
        "out": "static/bundle.js",
        "source_map": true,
        "watch": true
    }
}